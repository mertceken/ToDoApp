@model IEnumerable<_20201031_ToDo.Models.TaskList>

@{
    ViewData["Title"] = "Index";
}

<p>
    <button type="button" class="btn btn-success" asp-action="Create">Yeni Yapılacak Ekle</button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
               <a asp-route-id="@Html.DisplayNameFor(model => model.TaskName)" >Yapılacaklar Listesi</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaskName)
            </td>
            <td>
                <button type="button" class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</button> |
                <button type="button" class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detaylar</button> |
                <button type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</button>
            </td>
        </tr>
}
    </tbody>
</table>
